<!-- app/views/admin/events/show.html.erb -->
<div class="bg-white rounded-lg shadow-md overflow-hidden mb-6">
  <div class="flex justify-between items-center p-4 border-b border-gray-200">
    <h2 class="text-xl font-bold text-gray-800">
      <i class="fas fa-calendar-alt mr-2 text-blue-600"></i>Detalles del Evento
    </h2>
    <%= link_to admin_events_path, class: "flex items-center px-3 py-2 bg-gray-100 text-gray-700 rounded hover:bg-gray-200 transition-colors" do %>
      <i class="fas fa-arrow-left mr-2"></i> Volver
    <% end %>
  </div>
  
  <div class="p-6">
    <%= render 'show_details', event: @event %>
  </div>
</div>