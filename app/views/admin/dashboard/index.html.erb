<style>
/* Estilos adicionales para el dashboard */

/* Animaciones para las tarjetas estadísticas */
.stat-card {
  position: relative;
  transition: all 0.3s ease;
  overflow: hidden;
}

.stat-card:hover {
  transform: translateY(-5px);
}

.stat-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: linear-gradient(90deg, #3b82f6, #8b5cf6);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.stat-card:hover::before {
  opacity: 1;
}

/* Iconos en tarjetas estadísticas */
.stat-icon {
  transition: all 0.3s ease;
}

.stat-card:hover .stat-icon {
  transform: scale(1.15);
}

/* Mejoras para títulos y subtítulos */
.card-title {
  font-size: 1.125rem;
  font-weight: 700;
  color: #1f2937;
  display: flex;
  align-items: center;
}

.card-title i {
  margin-right: 0.5rem;
  color: #3b82f6;
}

.card-subtitle {
  color: #6b7280;
  font-size: 0.875rem;
  margin-top: 0.25rem;
}

/* Tablas con estilo mejorado */
.data-table {
  width: 100%;
  border-collapse: separate;
  border-spacing: 0;
}

.data-table th {
  text-transform: uppercase;
  font-size: 0.75rem;
  font-weight: 600;
  color: #6b7280;
  padding: 0.75rem 1rem;
  background-color: #f9fafb;
  border-bottom: 1px solid #e5e7eb;
}

.data-table td {
  padding: 1rem;
  border-bottom: 1px solid #e5e7eb;
  vertical-align: middle;
}

.data-table tr:last-child td {
  border-bottom: none;
}

.data-table tr {
  transition: all 0.2s ease;
}

.data-table tr:hover {
  background-color: #f9fafb;
}

/* Indicadores de estado */
.status-indicator {
  display: inline-flex;
  align-items: center;
  padding: 0.25rem 0.75rem;
  border-radius: 9999px;
  font-size: 0.75rem;
  font-weight: 500;
}

.status-active {
  background-color: rgba(16, 185, 129, 0.1);
  color: rgb(16, 185, 129);
}

.status-pending {
  background-color: rgba(245, 158, 11, 0.1);
  color: rgb(245, 158, 11);
}

.status-inactive {
  background-color: rgba(239, 68, 68, 0.1);
  color: rgb(239, 68, 68);
}

/* Botones de acción */
.action-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 2rem;
  height: 2rem;
  border-radius: 0.375rem;
  transition: all 0.2s ease;
  color: #6b7280;
}

.action-button:hover {
  background-color: #f3f4f6;
  color: #1f2937;
}

.action-button.edit:hover {
  color: #3b82f6;
}

.action-button.view:hover {
  color: #10b981;
}

.action-button.delete:hover {
  color: #ef4444;
}

/* Tarjetas de actividad reciente */
.activity-card {
  border-radius: 0.5rem;
  overflow: hidden;
  transition: all 0.3s ease;
}

.activity-item {
  padding: 1rem;
  border-bottom: 1px solid #e5e7eb;
  transition: all 0.2s ease;
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-item:hover {
  background-color: #f9fafb;
}

.activity-avatar {
  width: 2.5rem;
  height: 2.5rem;
  border-radius: 9999px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 1rem;
}

.activity-content {
  flex: 1;
}

.activity-user {
  font-weight: 600;
  color: #1f2937;
}

.activity-action {
  color: #4b5563;
}

.activity-target {
  font-weight: 600;
  color: #1f2937;
}

.activity-time {
  font-size: 0.75rem;
  color: #9ca3af;
  margin-top: 0.25rem;
}

/* Tarjeta de resumen */
.summary-card {
  border-radius: 0.5rem;
  overflow: hidden;
  transition: all 0.3s ease;
}

.summary-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1rem;
  border-bottom: 1px solid #e5e7eb;
}

.summary-title {
  font-size: 1.125rem;
  font-weight: 700;
  color: #1f2937;
}

.summary-actions {
  display: flex;
  gap: 0.5rem;
}

.summary-tab {
  padding: 0.25rem 0.75rem;
  border-radius: 0.375rem;
  font-size: 0.75rem;
  font-weight: 500;
  transition: all 0.2s ease;
}

.summary-tab.active {
  background-color: #dbeafe;
  color: #2563eb;
}

.summary-tab:not(.active) {
  color: #6b7280;
}

.summary-tab:not(.active):hover {
  background-color: #f3f4f6;
}

.chart-container {
  height: 16rem;
  background-color: #f9fafb;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #9ca3af;
  font-size: 0.875rem;
  background-image: 
    linear-gradient(rgba(243, 244, 246, 0.5) 1px, transparent 1px),
    linear-gradient(90deg, rgba(243, 244, 246, 0.5) 1px, transparent 1px);
  background-size: 20px 20px;
}

.summary-items {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 0.75rem;
  padding: 1rem;
}

.summary-item {
  background-color: #f9fafb;
  border-radius: 0.375rem;
  padding: 0.75rem;
  transition: all 0.2s ease;
}

.summary-item:hover {
  background-color: #f3f4f6;
}

.summary-item-label {
  font-size: 0.75rem;
  color: #6b7280;
  margin-bottom: 0.25rem;
}

.summary-item-value {
  font-weight: 700;
  color: #1f2937;
}

/* Resaltado de enlace activo */
.nav-link {
  transition: all 0.2s ease;
}

.nav-link.active {
  background-color: rgba(37, 99, 235, 0.9);
  color: white;
  font-weight: 600;
}

.nav-link:hover:not(.active) {
  background-color: rgba(37, 99, 235, 0.1);
}

/* Diseño mejorado para badges de estado */
.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.25rem 0.75rem;
  border-radius: 9999px;
  font-size: 0.75rem;
  font-weight: 500;
  letter-spacing: 0.025em;
}

.badge-success {
  background-color: rgba(16, 185, 129, 0.1);
  color: rgb(16, 185, 129);
}

.badge-warning {
  background-color: rgba(245, 158, 11, 0.1);
  color: rgb(245, 158, 11);
}

.badge-danger {
  background-color: rgba(239, 68, 68, 0.1);
  color: rgb(239, 68, 68);
}

/* Animación para elementos de lista */
.list-item {
  transition: all 0.2s ease;
}

.list-item:hover {
  transform: translateX(4px);
}

/* Animaciones suaves para cargas */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

.animate-fadeIn {
  animation: fadeIn 0.5s ease forwards;
}

/* Tarjetas con efecto de hover elegante */
.hover-card {
  transition: all 0.3s ease;
}

.hover-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
}

/* Estilo de paginación */
.pagination {
  display: flex;
  list-style: none;
  padding: 0;
  margin: 1rem 0;
}

.pagination-item {
  margin: 0 0.25rem;
}

.pagination-link {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 2rem;
  height: 2rem;
  border-radius: 0.375rem;
  transition: all 0.2s ease;
  color: #6b7280;
}

.pagination-link:hover {
  background-color: #f3f4f6;
  color: #1f2937;
}

.pagination-link.active {
  background-color: #3b82f6;
  color: white;
}

/* Botones elegantes */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.5rem 1rem;
  border-radius: 0.375rem;
  font-weight: 500;
  transition: all 0.2s ease;
}

.btn-primary {
  background-color: #3b82f6;
  color: white;
}

.btn-primary:hover {
  background-color: #2563eb;
}

.btn-secondary {
  background-color: #f3f4f6;
  color: #4b5563;
}

.btn-secondary:hover {
  background-color: #e5e7eb;
}
</style>

