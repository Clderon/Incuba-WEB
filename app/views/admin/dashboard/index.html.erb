<script>
// Variables globales para el gráfico
let inscripcionesChart;
const datosGrafico = {
  '6meses': {
    labels: <%= raw @meses_labels.to_json %>,
    programas: <%= raw @inscripciones_programas_data.to_json %>,
    eventos: <%= raw @inscripciones_eventos_data.to_json %>
  },
  '12meses': {
    labels: <%= raw @meses_12_labels.to_json %>,
    programas: <%= raw @inscripciones_programas_12_data.to_json %>,
    eventos: <%= raw @inscripciones_eventos_12_data.to_json %>
  }
};

document.addEventListener('DOMContentLoaded', function() {
  // === SCRIPT PARA EL DROPDOWN DE ACTIVIDAD RECIENTE ===
  const button = document.getElementById('activityDropdown');
  const menu = document.getElementById('activityMenu');
  const icon = document.getElementById('dropdownIcon');
  
  if (button && menu && icon) {
    button.addEventListener('click', function(e) {
      e.preventDefault();
      menu.classList.toggle('hidden');
      
      // Rotar el icono cuando se abre/cierra
      if (menu.classList.contains('hidden')) {
        icon.style.transform = 'rotate(0deg)';
        button.classList.remove('ring-2', 'ring-blue-500');
      } else {
        icon.style.transform = 'rotate(180deg)';
        button.classList.add('ring-2', 'ring-blue-500');
      }
    });
    
    document.addEventListener('click', function(e) {
      if (!button.contains(e.target) && !menu.contains(e.target)) {
        menu.classList.add('hidden');
        icon.style.transform = 'rotate(0deg)';
        button.classList.remove('ring-2', 'ring-blue-500');
      }
    });
  }

  // === SCRIPT PARA EL GRÁFICO DE INSCRIPCIONES ===
  const ctx = document.getElementById('inscripcionesChart');
  if (ctx) {
    crearGrafico('6meses');
  }
});

// Función para crear el gráfico
function crearGrafico(periodo) {
  const ctx = document.getElementById('inscripcionesChart');
  const datos = datosGrafico[periodo];
  
  if (inscripcionesChart) {
    inscripcionesChart.destroy();
  }
  
  inscripcionesChart = new Chart(ctx, {
    type: 'line',
    data: {
      labels: datos.labels,
      datasets: [{
        label: 'Inscripciones de Programas',
        data: datos.programas,
        borderColor: '#3b82f6',
        backgroundColor: 'rgba(59, 130, 246, 0.08)',
        borderWidth: 3,
        fill: true,
        tension: 0.4,
        pointBackgroundColor: '#3b82f6',
        pointBorderColor: '#ffffff',
        pointBorderWidth: 3,
        pointRadius: 6,
        pointHoverRadius: 8,
        pointHoverBackgroundColor: '#1d4ed8',
        pointHoverBorderColor: '#ffffff',
        pointHoverBorderWidth: 3,
      }, {
        label: 'Inscripciones de Eventos',
        data: datos.eventos,
        borderColor: '#8b5cf6',
        backgroundColor: 'rgba(139, 92, 246, 0.08)',
        borderWidth: 3,
        fill: true,
        tension: 0.4,
        pointBackgroundColor: '#8b5cf6',
        pointBorderColor: '#ffffff',
        pointBorderWidth: 3,
        pointRadius: 6,
        pointHoverRadius: 8,
        pointHoverBackgroundColor: '#7c3aed',
        pointHoverBorderColor: '#ffffff',
        pointHoverBorderWidth: 3,
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          position: 'top',
          align: 'center',
          labels: {
            usePointStyle: true,
            pointStyle: 'circle',
            padding: 20,
            font: {
              size: 12,
              weight: '600',
              family: 'ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto'
            },
            color: '#374151'
          }
        },
        tooltip: {
          mode: 'index',
          intersect: false,
          backgroundColor: 'rgba(255, 255, 255, 0.96)',
          titleColor: '#1f2937',
          bodyColor: '#1f2937',
          borderColor: '#e5e7eb',
          borderWidth: 1,
          cornerRadius: 8,
          displayColors: true,
          titleFont: {
            size: 13,
            weight: '600'
          },
          bodyFont: {
            size: 12,
            weight: '500'
          },
          padding: 12,
          caretPadding: 8,
          callbacks: {
            title: function(context) {
              return 'Mes: ' + context[0].label;
            },
            label: function(context) {
              const label = context.dataset.label;
              const value = context.parsed.y;
              const pluralText = value === 1 ? 'inscripción' : 'inscripciones';
              return `${label}: ${value} ${pluralText}`;
            }
          }
        }
      },
      scales: {
        x: {
          grid: {
            display: true,
            color: 'rgba(156, 163, 175, 0.15)',
            lineWidth: 1
          },
          ticks: {
            font: {
              size: 11,
              weight: '500',
              family: 'ui-sans-serif, system-ui'
            },
            color: '#6b7280',
            maxRotation: 0,
            padding: 8
          },
          border: {
            display: false
          }
        },
        y: {
          beginAtZero: true,
          grid: {
            display: true,
            color: 'rgba(156, 163, 175, 0.15)',
            lineWidth: 1
          },
          ticks: {
            font: {
              size: 11,
              weight: '500',
              family: 'ui-sans-serif, system-ui'
            },
            color: '#6b7280',
            stepSize: 1,
            padding: 8,
            callback: function(value) {
              return Number.isInteger(value) ? value : '';
            }
          },
          border: {
            display: false
          }
        }
      },
      interaction: {
        mode: 'nearest',
        axis: 'x',
        intersect: false
      },
      elements: {
        point: {
          hoverBackgroundColor: '#ffffff',
          hitRadius: 8,
          hoverRadius: 8
        },
        line: {
          borderJoinStyle: 'round',
          borderCapStyle: 'round'
        }
      },
      animation: {
        duration: 1000,
        easing: 'easeInOutQuart'
      }
    }
  });
}

// Función para cambiar el período del gráfico
function cambiarPeriodoGrafico(periodo) {
  // Actualizar botones
  const btn6Meses = document.getElementById('btn-6-meses');
  const btn12Meses = document.getElementById('btn-12-meses');
  
  if (periodo === '6meses') {
    btn6Meses.classList.add('bg-blue-100', 'text-blue-600', 'active');
    btn6Meses.classList.remove('text-gray-500');
    btn12Meses.classList.remove('bg-blue-100', 'text-blue-600', 'active');
    btn12Meses.classList.add('text-gray-500');
  } else {
    btn12Meses.classList.add('bg-blue-100', 'text-blue-600', 'active');
    btn12Meses.classList.remove('text-gray-500');
    btn6Meses.classList.remove('bg-blue-100', 'text-blue-600', 'active');
    btn6Meses.classList.add('text-gray-500');
  }
  
  // Recrear gráfico con nuevos datos
  crearGrafico(periodo);
}
