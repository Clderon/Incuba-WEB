<!-- Decoración de fondo -->
<div class="background-decoration">
  <div class="bg-circle bg-circle-1"></div>
  <div class="bg-circle bg-circle-2"></div>
  <div class="bg-circle bg-circle-3"></div>
  <div class="bg-dots"></div>
  <div class="bg-line bg-line-1"></div>
  <div class="bg-line bg-line-2"></div>
</div>

<!-- Main Container -->
<div class="inscription-container">
  <!-- Header Section -->
  <div class="inscription-hero">
    <div class="hero-content">
      <div class="hero-badge">
        <i class="fas fa-calendar-alt"></i>
        <span>Formulario de Inscripción</span>
      </div>
      <h1 class="hero-title">Evento: <%= @event.titulo %></h1>
      <p class="hero-description"><%= @event.descripcion %></p>
    </div>
    <div class="hero-decoration">
      <div class="decoration-circle"></div>
      <div class="decoration-dots"></div>
    </div>
  </div>

  <!-- Progress Navigation -->
  <div class="progress-section">
    <div class="progress-wrapper">
      <div class="progress-bar">
        <div class="progress-fill" style="width: 30%"></div>
      </div>
      <div class="progress-steps">
        <div class="step active">
          <div class="step-circle">
            <i class="fas fa-user"></i>
          </div>
          <span class="step-label">Información Personal</span>
        </div>
        <div class="step">
          <div class="step-circle">
            <i class="fas fa-lightbulb"></i>
          </div>
          <span class="step-label">Emprendimiento</span>
        </div>
        <div class="step">
          <div class="step-circle">
            <i class="fas fa-check"></i>
          </div>
          <span class="step-label">Confirmación</span>
        </div>
      </div>
    </div>
    
    <a href="<%= eventos_path %>" class="back-button">
      <i class="fas fa-arrow-left"></i>
      <span>Volver a eventos</span>
    </a>
  </div>

  <!-- Form Card -->
  <div class="form-card">
    <%= form_with(model: @formulario, url: inscripcion_evento_path(@event), method: :post, local: true, class: "inscription-form") do |f| %>
      <%= hidden_field_tag :id, @event.id %>
      
      <!-- Error Messages -->
      <% if @formulario.errors.any? %>
        <div class="alert alert-error">
          <div class="alert-icon">
            <i class="fas fa-exclamation-triangle"></i>
          </div>
          <div class="alert-content">
            <h3>Se encontraron errores en el formulario</h3>
            <ul>
              <% @formulario.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <!-- Personal Information Section -->
      <div class="form-section">
        <div class="section-header">
          <div class="section-icon">
            <i class="fas fa-user-circle"></i>
          </div>
          <div class="section-title">
            <h2>Información Personal del Líder</h2>
            <p>Completa tus datos personales. Los campos con * son obligatorios.</p>
          </div>
        </div>

        <div class="form-grid">
          <!-- DNI Field (First) -->
          <div class="form-group full-width dni-group">
            <%= f.label :dni_lider, "Documento de Identidad (DNI) *", class: "form-label" %>
            <div class="input-container">
              <%= f.text_field :dni_lider, 
                  class: "form-input", 
                  required: true, 
                  placeholder: "Ingresa tu DNI de 8 dígitos",
                  maxlength: "8",
                  pattern: "[0-9]{8}" %>
              <div class="input-icon">
                <i class="fas fa-id-card"></i>
              </div>
            </div>
            <small class="form-hint">
              <i class="fas fa-info-circle"></i>
              Automáticamente buscaremos tus datos en RENIEC
            </small>
          </div>

          <!-- Nombres Field -->
          <div class="form-group">
            <%= f.label :nombre_lider, "Nombres *", class: "form-label" %>
            <div class="input-container">
              <%= f.text_field :nombre_lider, 
                  class: "form-input", 
                  required: true, 
                  placeholder: "Se completará automáticamente" %>
              <div class="input-icon">
                <i class="fas fa-user"></i>
              </div>
            </div>
          </div>

          <!-- Apellidos Field -->
          <div class="form-group">
            <%= f.label :apellidos_lider, "Apellidos *", class: "form-label" %>
            <div class="input-container">
              <%= f.text_field :apellidos_lider, 
                  class: "form-input", 
                  required: true, 
                  placeholder: "Se completará automáticamente" %>
              <div class="input-icon">
                <i class="fas fa-user"></i>
              </div>
            </div>
          </div>

          <!-- Email Field -->
          <div class="form-group">
            <%= f.label :correo_lider, "Correo Electrónico *", class: "form-label" %>
            <div class="input-container">
              <%= f.email_field :correo_lider, 
                  class: "form-input", 
                  required: true, 
                  placeholder: "ejemplo@correo.com" %>
              <div class="input-icon">
                <i class="fas fa-envelope"></i>
              </div>
            </div>
          </div>

          <!-- Phone Field -->
          <div class="form-group">
            <%= f.label :telefono_lider, "Teléfono *", class: "form-label" %>
            <div class="input-container">
              <%= f.telephone_field :telefono_lider, 
                  class: "form-input", 
                  required: true, 
                  placeholder: "999 888 777" %>
              <div class="input-icon">
                <i class="fas fa-phone"></i>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Startup Information Section -->
      <div class="form-section">
        <div class="section-header">
          <div class="section-icon">
            <i class="fas fa-lightbulb"></i>
          </div>
          <div class="section-title">
            <h2>Información del Emprendimiento</h2>
            <p>Cuéntanos sobre tu startup o proyecto empresarial.</p>
          </div>
        </div>

        <div class="form-grid">
          <div class="form-group">
            <%= f.label :nombre_emprendimiento, "Nombre del Emprendimiento *", class: "form-label" %>
            <div class="input-container">
              <%= f.text_field :nombre_emprendimiento, 
                  class: "form-input", 
                  required: true, 
                  placeholder: "Nombre de tu startup" %>
              <div class="input-icon">
                <i class="fas fa-rocket"></i>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :numero_integrantes_equipo, "Número de Integrantes", class: "form-label" %>
            <div class="input-container">
              <%= f.number_field :numero_integrantes_equipo, 
                  class: "form-input", 
                  min: 1, 
                  max: 20,
                  placeholder: "1" %>
              <div class="input-icon">
                <i class="fas fa-users"></i>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :sector_economico, "Sector Económico", class: "form-label" %>
            <div class="select-container">
              <%= f.select :sector_economico, [
                ['Tecnología', 'tecnologia'],
                ['Agricultura', 'agricultura'],
                ['Salud', 'salud'],
                ['Educación', 'educacion'],
                ['Comercio', 'comercio'],
                ['Servicios', 'servicios'],
                ['Manufactura', 'manufactura'],
                ['Turismo', 'turismo'],
                ['Otro', 'otro']
              ], { prompt: 'Selecciona un sector' }, { class: "form-select" } %>
              <div class="select-icon">
                <i class="fas fa-chevron-down"></i>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :categoria, "Categoría del Emprendimiento", class: "form-label" %>
            <div class="select-container">
              <%= f.select :categoria, [
                ['Startup Tecnológica', 'startup_tecnologica'],
                ['Emprendimiento Social', 'emprendimiento_social'],
                ['Negocio Tradicional', 'negocio_tradicional'],
                ['Empresa de Base Tecnológica', 'empresa_base_tecnologica'],
                ['Emprendimiento Verde/Sostenible', 'emprendimiento_verde'],
                ['Otro', 'otro']
              ], { prompt: 'Selecciona una categoría' }, { class: "form-select" } %>
              <div class="select-icon">
                <i class="fas fa-chevron-down"></i>
              </div>
            </div>
          </div>

          <div class="form-group full-width">
            <%= f.label :descripcion, "Descripción del Emprendimiento *", class: "form-label" %>
            <%= f.text_area :descripcion, 
                class: "form-textarea", 
                rows: 4, 
                required: true, 
                placeholder: "Describe brevemente tu emprendimiento, qué problema resuelve y cómo lo hace..." %>
          </div>
        </div>
      </div>

      <!-- Project Details Section -->
      <div class="form-section">
        <div class="section-header">
          <div class="section-icon">
            <i class="fas fa-cogs"></i>
          </div>
          <div class="section-title">
            <h2>Detalles del Proyecto</h2>
            <p>Profundiza en los aspectos técnicos y estratégicos de tu emprendimiento.</p>
          </div>
        </div>

        <div class="form-grid">
          <div class="form-group full-width">
            <%= f.label :cuentanos_proyecto, "Cuéntanos sobre tu proyecto", class: "form-label" %>
            <%= f.text_area :cuentanos_proyecto, 
                class: "form-textarea", 
                rows: 4,
                placeholder: "Explica en detalle tu proyecto, sus objetivos y el impacto que esperas generar..." %>
          </div>

          <div class="form-group full-width">
            <%= f.label :atributos_ventaja_diferenciacion, "Atributos y Ventajas Diferenciales", class: "form-label" %>
            <%= f.text_area :atributos_ventaja_diferenciacion, 
                class: "form-textarea", 
                rows: 3,
                placeholder: "¿Qué hace único a tu emprendimiento? ¿Cuáles son sus ventajas competitivas?" %>
          </div>

          <div class="form-group">
            <%= f.label :modelo_negocio, "Modelo de Negocio", class: "form-label" %>
            <%= f.text_area :modelo_negocio, 
                class: "form-textarea", 
                rows: 3,
                placeholder: "Describe tu modelo de negocio: ¿cómo generas ingresos?" %>
          </div>

          <div class="form-group">
            <%= f.label :indicadores_metas_6meses, "Metas a 6 meses", class: "form-label" %>
            <%= f.text_area :indicadores_metas_6meses, 
                class: "form-textarea", 
                rows: 3,
                placeholder: "¿Qué metas esperas alcanzar en los próximos 6 meses?" %>
          </div>
        </div>
      </div>

      <!-- Digital Presence Section -->
      <div class="form-section">
        <div class="section-header">
          <div class="section-icon">
            <i class="fas fa-globe"></i>
          </div>
          <div class="section-title">
            <h2>Presencia Digital</h2>
            <p>Comparte tus canales digitales y sitio web (opcional).</p>
          </div>
        </div>

        <div class="form-grid">
          <div class="form-group">
            <%= f.label :redes_sociales, "Redes Sociales", class: "form-label" %>
            <div class="input-container">
              <%= f.text_field :redes_sociales, 
                  class: "form-input",
                  placeholder: "Enlaces a redes sociales" %>
              <div class="input-icon">
                <i class="fab fa-instagram"></i>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :web_startup, "Sitio Web", class: "form-label" %>
            <div class="input-container">
              <%= f.url_field :web_startup, 
                  class: "form-input",
                  placeholder: "https://mi-startup.com" %>
              <div class="input-icon">
                <i class="fas fa-link"></i>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Terms and Conditions -->
      <div class="form-section">
        <div class="terms-container">
          <div class="checkbox-container">
            <%= check_box_tag :acepta_terminos, '1', false, required: true, id: "acepta_terminos", class: "form-checkbox" %>
            <label for="acepta_terminos" class="checkbox-label">
              <span class="checkbox-custom"></span>
              <span class="checkbox-text">Acepto los términos y condiciones *</span>
            </label>
          </div>
          <p class="terms-info">
            Al enviar este formulario, aceptas que tus datos serán procesados de acuerdo con nuestra 
            <a href="#" class="terms-link">Política de Privacidad</a>.
          </p>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="form-actions">
        <button type="button" class="btn btn-secondary" onclick="window.history.back();">
          <i class="fas fa-times"></i>
          <span>Cancelar</span>
        </button>
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-paper-plane"></i>
          <span>Enviar Inscripción</span>
        </button>
      </div>
    <% end %>
  </div>
</div>

