<!-- JavaScript mejorado -->
<script>
  setTimeout(function() {
    function inicializarConsultaDNI() {
      const dniField = document.querySelector('input[name="formulario_evento[dni_lider]"]');
      const nombresField = document.querySelector('input[name="formulario_evento[nombre_lider]"]');
      const apellidosField = document.querySelector('input[name="formulario_evento[apellidos_lider]"]');
      const eventIdField = document.querySelector('input[name="id"]');

    if (!dniField || !nombresField || !apellidosField || !eventIdField) {
      console.warn('No se encontraron todos los campos necesarios para consulta DNI');
      return;
    }

      const eventId = eventIdField.value;

    if (!eventId) {
      console.warn('No se encontró ID del evento');
      return;
    }

    let consultaTimeout;
    let abortController;
    const loadingIndicator = crearIndicadorCarga();
    dniField.parentNode.appendChild(loadingIndicator);

    dniField.addEventListener('input', function() {
      const dni = this.value.trim();
      
      // Cancelar consulta anterior si existe
      clearTimeout(consultaTimeout);
      if (abortController) {
        abortController.abort();
      }
      
      ocultarIndicadorCarga(loadingIndicator, dniField);
      
      if (dni.length === 8 && /^\d{8}$/.test(dni)) {
        // TIMEOUT MÁS LARGO PARA AWS (era 1000ms, ahora 1500ms)
        consultaTimeout = setTimeout(() => {
          realizarConsultaDNI(dni, eventId, loadingIndicator, dniField, nombresField, apellidosField);
        }, 1500);
      } else if (dni.length > 0) {
        mostrarErrorCampo(dniField, 'El DNI debe tener exactamente 8 dígitos');
      } else {
        limpiarCamposPersonales(nombresField, apellidosField);
        limpiarErrorCampo(dniField);
      }
    });
  }

  function realizarConsultaDNI(dni, eventId, loadingIndicator, dniField, nombresField, apellidosField) {
    mostrarIndicadorCarga(loadingIndicator, dniField);
    limpiarErrorCampo(dniField);

    // Crear nuevo AbortController para esta consulta
    abortController = new AbortController();

    const csrfToken = document.querySelector('meta[name="csrf-token"]');
    const token = csrfToken ? csrfToken.getAttribute('content') : '';

    console.log(`Iniciando consulta DNI: ${dni}`);
    const startTime = Date.now();

    // TIMEOUT MÁS LARGO PARA AWS (era sin timeout, ahora 25 segundos)
    const timeoutId = setTimeout(() => {
      abortController.abort();
    }, 25000);

    fetch(`/eventos/${eventId}/consultar_dni`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-Requested-With': 'XMLHttpRequest',
        'X-CSRF-Token': token
      },
      body: JSON.stringify({ dni: dni }),
      signal: abortController.signal
    })
    .then(response => {
      clearTimeout(timeoutId);
      const elapsed = Date.now() - startTime;
      console.log(`Consulta DNI completada en ${elapsed}ms - Status: ${response.status}`);
      
      if (!response.ok) {
        throw new Error(`HTTP ${response.status}: ${response.statusText}`);
      }
      
      return response.json();
    })
    .then(data => {
      console.log('Respuesta DNI:', data);
      
      if (data.success && data.data) {
        llenarCamposPersonales(data.data, nombresField, apellidosField);
        mostrarMensajeExito('✓ Datos encontrados y completados automáticamente');
      } else {
        const errorMsg = data.error || 'No se encontraron datos para este DNI';
        mostrarErrorCampo(dniField, errorMsg);
        habilitarEdicionManual(nombresField, apellidosField);
        console.warn('Error en consulta DNI:', errorMsg);
      }
    })
    .catch(error => {
      clearTimeout(timeoutId);
      const elapsed = Date.now() - startTime;
      
      let errorMessage;
      
      if (error.name === 'AbortError') {
        errorMessage = 'La consulta tomó demasiado tiempo. Puedes llenar los datos manualmente.';
        console.warn(`Consulta DNI cancelada por timeout después de ${elapsed}ms`);
      } else if (error.message.includes('Failed to fetch')) {
        errorMessage = 'Error de conexión. Verifica tu internet y completa los datos manualmente.';
        console.error('Error de red en consulta DNI:', error);
      } else {
        errorMessage = 'Error en la consulta. Puedes llenar los datos manualmente.';
        console.error('Error en consulta DNI:', error);
      }
      
      mostrarErrorCampo(dniField, errorMessage);
      habilitarEdicionManual(nombresField, apellidosField);
    })
    .finally(() => {
      clearTimeout(timeoutId);
      ocultarIndicadorCarga(loadingIndicator, dniField);
      abortController = null;
    });
  }

  function llenarCamposPersonales(data, nombresField, apellidosField) {
    console.log('Llenando campos con:', data);
    
    if (data.nombres) {
      nombresField.value = data.nombres;
      animarExitoCampo(nombresField);
    }

    if (data.apellidos_completos) {
      apellidosField.value = data.apellidos_completos;
      animarExitoCampo(apellidosField);
    }
    
    // Marcar campos como completados automáticamente
    nombresField.setAttribute('data-dni-filled', 'true');
    apellidosField.setAttribute('data-dni-filled', 'true');
  }

    function animarExitoCampo(field) {
      field.style.backgroundColor = '#f0f9ff';
      field.style.borderColor = '#0ea5e9';
      field.style.transition = 'all 0.3s ease';

      setTimeout(() => {
        field.style.backgroundColor = '';
        field.style.borderColor = '#10b981';
      }, 1000);

      setTimeout(() => {
        field.style.borderColor = '';
      }, 4000);
    }

  function limpiarCamposPersonales(nombresField, apellidosField) {
    // Solo limpiar si fueron llenados automáticamente
    if (nombresField.getAttribute('data-dni-filled') === 'true') {
      nombresField.value = '';
      nombresField.removeAttribute('data-dni-filled');
    }
    if (apellidosField.getAttribute('data-dni-filled') === 'true') {
      apellidosField.value = '';
      apellidosField.removeAttribute('data-dni-filled');
    }
  }

  function habilitarEdicionManual(nombresField, apellidosField) {
    [nombresField, apellidosField].forEach(field => {
      field.style.backgroundColor = '#fffbeb';
      field.style.borderColor = '#f59e0b';
      field.removeAttribute('data-dni-filled');
    });
    
    nombresField.placeholder = 'Ingresa el nombre manualmente';
    apellidosField.placeholder = 'Ingresa los apellidos manualmente';
    
    setTimeout(() => {
      nombresField.style.backgroundColor = '';
      apellidosField.style.backgroundColor = '';
      nombresField.style.borderColor = '';
      apellidosField.style.borderColor = '';
    }, 5000); // Aumentado de 3 a 5 segundos
  }

  function crearIndicadorCarga() {
    const indicator = document.createElement('div');
    indicator.className = 'dni-loading-indicator';
    indicator.style.cssText = `
      display: none;
      position: absolute;
      right: 12px;
      top: 50%;
      transform: translateY(-50%);
      color: #0ea5e9;
      font-size: 0.8rem;
      font-weight: 500;
      background: white;
      padding: 4px 8px;
      border-radius: 6px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      z-index: 10;
      border: 1px solid #e0f2fe;
      max-width: 150px;
      white-space: nowrap;
    `;
    
    // Indicador con animación mejorada
    indicator.innerHTML = `
      <i class="fas fa-spinner fa-spin" style="margin-right: 4px;"></i>
      <span class="loading-text">Consultando...</span>
    `;
    
    return indicator;
  }

  function mostrarIndicadorCarga(indicator, dniField) {
    dniField.parentNode.style.position = 'relative';
    indicator.style.display = 'block';
    dniField.style.paddingRight = '160px'; // Aumentado para el nuevo indicador
    
    // Cambiar texto después de 5 segundos para indicar que puede tomar tiempo
    setTimeout(() => {
      const loadingText = indicator.querySelector('.loading-text');
      if (loadingText && indicator.style.display !== 'none') {
        loadingText.textContent = 'Puede tomar unos segundos...';
      }
    }, 5000);
  }

  function ocultarIndicadorCarga(indicator, dniField) {
    indicator.style.display = 'none';
    dniField.style.paddingRight = '';
    
    // Resetear texto
    const loadingText = indicator.querySelector('.loading-text');
    if (loadingText) {
      loadingText.textContent = 'Consultando...';
    }
  }

  function mostrarErrorCampo(field, message) {
    limpiarErrorCampo(field);
    
    const errorDiv = document.createElement('div');
    errorDiv.className = 'dni-error-message';
    errorDiv.style.cssText = `
      color: #dc2626;
      font-size: 0.8rem;
      margin-top: 6px;
      display: flex;
      align-items: flex-start;
      gap: 6px;
      padding: 8px 10px;
      background: #fef2f2;
      border-radius: 6px;
      border: 1px solid #fecaca;
      line-height: 1.4;
    `;
    errorDiv.innerHTML = `<i class="fas fa-exclamation-triangle" style="margin-top: 2px; flex-shrink: 0;"></i> ${message}`;
    
    field.style.borderColor = '#dc2626';
    field.parentNode.appendChild(errorDiv);
    
    // Auto-ocultar error después de 10 segundos
    setTimeout(() => {
      limpiarErrorCampo(field);
    }, 10000);
  }

  function limpiarErrorCampo(field) {
    const errorMsg = field.parentNode.querySelector('.dni-error-message');
    if (errorMsg) {
      errorMsg.remove();
    }
    if (field.style.borderColor === 'rgb(220, 38, 38)') {
      field.style.borderColor = '';
    }
  }

    function mostrarMensajeExito(message) {
      // Remover mensaje previo si existe
      const existingMessage = document.querySelector('.dni-success-toast');
      if (existingMessage) {
        existingMessage.remove();
      }

    const successDiv = document.createElement('div');
    successDiv.className = 'dni-success-toast';
    successDiv.style.cssText = `
      position: fixed;
      top: 20px;
      right: 20px;
      background: linear-gradient(135deg, #10b981, #059669);
      color: white;
      padding: 16px 20px;
      border-radius: 12px;
      box-shadow: 0 10px 25px rgba(16, 185, 129, 0.3);
      z-index: 1000;
      display: flex;
      align-items: center;
      gap: 10px;
      font-weight: 500;
      font-size: 0.9rem;
      max-width: 350px;
      transform: translateX(400px);
      transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    `;
    successDiv.innerHTML = `
      <div style="
        width: 24px;
        height: 24px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.8rem;
      ">
        <i class="fas fa-check"></i>
      </div>
      <span>${message}</span>
    `;
    
    document.body.appendChild(successDiv);
    
    // Animar entrada
    setTimeout(() => {
      successDiv.style.transform = 'translateX(0)';
    }, 100);
    
    // Animar salida
    setTimeout(() => {
      successDiv.style.transform = 'translateX(400px)';
      setTimeout(() => {
        if (successDiv.parentNode) {
          successDiv.remove();
        }
      }, 300);
    }, 4000); // Aumentado de 3 a 4 segundos
  }

  // Inicializar cuando el DOM esté listo
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', inicializarConsultaDNI);
  } else {
    inicializarConsultaDNI();
  }

  }, 1000);
</script>