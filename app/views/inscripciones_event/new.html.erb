    --spacing-xl: 2rem;
    --spacing-2xl: 3rem;
    
    /* Border radius */
    --radius-sm: 0.375rem;
    --radius-md: 0.5rem;
    --radius-lg: 0.75rem;
    --radius-xl: 1rem;
    --radius-2xl: 1.5rem;
    
    /* Transiciones */
    --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
    --transition-normal: 300ms cubic-bezier(0.4, 0, 0.2, 1);
    --transition-slow: 500ms cubic-bezier(0.4, 0, 0.2, 1);
    
    /* Fuentes */
    --font-inter: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    --font-poppins: 'Poppins', -apple-system, BlinkMacSystemFont, sans-serif;
  }

  /* Reset y base */
  * {
    box-sizing: border-box;
  }

  body, html {
    margin: 0;
    padding: 0;
    font-family: var(--font-inter);
    background-color: var(--bg-main);
    color: var(--text-primary);
    line-height: 1.6;
    overflow-x: hidden;
  }

  /* Elementos decorativos de fondo */
  .background-decoration {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    overflow: hidden;
    pointer-events: none;
  }

  .bg-circle {
    position: absolute;
    border-radius: 50%;
    opacity: 0.1;
    filter: blur(80px);
  }

  .bg-circle-1 {
    width: 400px;
    height: 400px;
    background: linear-gradient(135deg, var(--accent-color), var(--primary-color));
    top: -200px;
    right: -100px;
  }

  .bg-circle-2 {
    width: 600px;
    height: 600px;
    background: linear-gradient(135deg, var(--success-color), var(--accent-color));
    bottom: -300px;
    left: -300px;
    opacity: 0.05;
  }

  .bg-circle-3 {
    width: 300px;
    height: 300px;
    background: var(--accent-color);
    top: 40%;
    left: 5%;
    opacity: 0.08;
  }

  .bg-dots {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: radial-gradient(var(--border-light) 1px, transparent 1px);
    background-size: 40px 40px;
    opacity: 0.5;
  }

  .bg-line {
    position: absolute;
    background: linear-gradient(90deg, transparent 0%, var(--border-light) 50%, transparent 100%);
    height: 1px;
    width: 100%;
    opacity: 0.6;
  }

  .bg-line-1 {
    top: 30%;
    transform: rotate(-2deg);
  }

  .bg-line-2 {
    bottom: 35%;
    transform: rotate(1deg);
  }

  /* Container principal */
  .inscription-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: var(--spacing-2xl) var(--spacing-md);
    margin-top: 240px;
    margin-bottom: var(--spacing-2xl);
    position: relative;
    z-index: 1;
  }

  /* Hero Section */
  .inscription-hero {
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
    border-radius: var(--radius-2xl);
    padding: var(--spacing-2xl);
    margin-bottom: var(--spacing-xl);
    color: white;
    position: relative;
    overflow: hidden;
    box-shadow: var(--shadow-xl);
  }

  .inscription-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Ccircle cx='30' cy='30' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    opacity: 0.3;
  }

  .hero-content {
    position: relative;
    z-index: 2;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm);
    background: rgba(255, 255, 255, 0.15);
    padding: var(--spacing-sm) var(--spacing-md);
    border-radius: var(--radius-xl);
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: var(--spacing-md);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .hero-title {
    font-family: var(--font-poppins);
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 var(--spacing-md);
    line-height: 1.2;
  }

  .hero-description {
    font-size: 1.125rem;
    margin: 0;
    opacity: 0.9;
    max-width: 600px;
    line-height: 1.6;
  }

  .hero-decoration {
    position: absolute;
    top: var(--spacing-md);
    right: var(--spacing-md);
    width: 120px;
    height: 120px;
    opacity: 0.1;
  }

  .decoration-circle {
    width: 80px;
    height: 80px;
    border: 2px solid white;
    border-radius: 50%;
    position: absolute;
    top: 0;
    right: 0;
  }

  .decoration-dots {
    width: 60px;
    height: 60px;
    background: url("data:image/svg+xml,%3Csvg width='20' height='20' viewBox='0 0 20 20' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%23ffffff' fill-opacity='0.4'%3E%3Ccircle cx='3' cy='3' r='1'/%3E%3Ccircle cx='13' cy='13' r='1'/%3E%3C/g%3E%3C/svg%3E");
    position: absolute;
    bottom: 0;
    left: 0;
  }

  /* Progress Section */
  .progress-section {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--spacing-xl);
    gap: var(--spacing-lg);
  }

  .progress-wrapper {
    flex: 1;
    max-width: 500px;
  }

  .progress-bar {
    height: 6px;
    background-color: var(--bg-gray-100);
    border-radius: var(--radius-sm);
    margin-bottom: var(--spacing-md);
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--accent-color), var(--success-color));
    border-radius: var(--radius-sm);
    transition: width var(--transition-normal);
  }

  .progress-steps {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .step {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 120px;
  }

  .step-circle {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: var(--bg-gray-100);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--spacing-sm);
    color: var(--text-muted);
    transition: all var(--transition-normal);
    font-size: 0.875rem;
  }

  .step.active .step-circle {
    background: linear-gradient(135deg, var(--accent-color), var(--success-color));
    color: white;
    box-shadow: var(--shadow-md);
  }

  .step-label {
    font-size: 0.8rem;
    color: var(--text-muted);
    font-weight: 500;
    line-height: 1.3;
  }

  .step.active .step-label {
    color: var(--text-primary);
    font-weight: 600;
  }

  .back-button {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-sm) var(--spacing-md);
    background: var(--bg-white);
    color: var(--text-secondary);
    text-decoration: none;
    border-radius: var(--radius-xl);
    font-weight: 500;
    font-size: 0.875rem;
    transition: all var(--transition-normal);
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--border-light);
  }

  .back-button:hover {
    background: var(--bg-gray-50);
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
    color: var(--text-primary);
  }

  .back-button i {
    transition: transform var(--transition-normal);
  }

  .back-button:hover i {
    transform: translateX(-2px);
  }

  /* Form Card */
  .form-card {
    background: var(--bg-white);
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-lg);
    overflow: hidden;
    border: 1px solid var(--border-light);
  }

  .inscription-form {
    padding: var(--spacing-2xl);
  }

  /* Alert Messages */
  .alert {
    padding: var(--spacing-md);
    border-radius: var(--radius-lg);
    margin-bottom: var(--spacing-lg);
    display: flex;
    gap: var(--spacing-md);
    border: 1px solid;
  }

  .alert-error {
    background-color: #fef2f2;
    border-color: #fecaca;
    color: var(--error-color);
  }

  .alert-icon {
    flex-shrink: 0;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .alert-content h3 {
    margin: 0 0 var(--spacing-sm);
    font-size: 1rem;
    font-weight: 600;
  }

  .alert-content ul {
    margin: 0;
    padding-left: var(--spacing-md);
  }

  .alert-content li {
    margin-bottom: var(--spacing-xs);
  }

  /* Form Sections */
  .form-section {
    margin-bottom: var(--spacing-2xl);
    padding-bottom: var(--spacing-xl);
    border-bottom: 1px solid var(--border-light);
  }

  .form-section:last-child {
    border-bottom: none;
    margin-bottom: 0;
  }

  .section-header {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-xl);
  }

  .section-icon {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-lg);
    background: linear-gradient(135deg, var(--accent-color), var(--success-color));
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.25rem;
    flex-shrink: 0;
    box-shadow: var(--shadow-md);
  }

  .section-title h2 {
    margin: 0 0 var(--spacing-xs);
    font-family: var(--font-poppins);
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .section-title p {
    margin: 0;
    color: var(--text-secondary);
    font-size: 0.9rem;
    line-height: 1.5;
  }

  /* Form Grid */
  .form-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-lg);
  }

  .form-group.full-width {
    grid-column: 1 / -1;
  }

  /* Form Groups */
  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-label {
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: var(--spacing-sm);
    font-size: 0.875rem;
    display: block;
  }

  /* Input Containers */
  .input-container, .select-container {
    position: relative;
    display: flex;
    align-items: center;
  }

  .form-input, .form-select {
    width: 100%;
    padding: 0.875rem var(--spacing-md);
    font-size: 1rem;
    line-height: 1.5;
    color: var(--text-primary);
    background-color: var(--bg-white);
    border: 2px solid var(--border-light);
    border-radius: var(--radius-lg);
    transition: all var(--transition-normal);
    outline: none;
  }

  .form-input:focus, .form-select:focus {
    border-color: var(--accent-color);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    background-color: #fafbff;
  }

  .form-input:hover, .form-select:hover {
    border-color: var(--border-medium);
  }

  .input-icon, .select-icon {
    position: absolute;
    right: var(--spacing-md);
    color: var(--text-light);
    font-size: 0.875rem;
    pointer-events: none;
    z-index: 1;
  }

  .form-input:focus + .input-icon {
    color: var(--accent-color);
  }

  /* Special styles for DNI group */
  .dni-group .input-container {
    margin-bottom: var(--spacing-sm);
  }

  .form-hint {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    font-size: 0.75rem;
    color: var(--text-muted);
    margin-top: var(--spacing-xs);
    padding: var(--spacing-xs) var(--spacing-sm);
    background: var(--bg-gray-50);
    border-radius: var(--radius-sm);
  }

  /* Textarea */
  .form-textarea {
    width: 100%;
    padding: 0.875rem var(--spacing-md);
    font-size: 1rem;
    line-height: 1.5;
    color: var(--text-primary);
    background-color: var(--bg-white);
    border: 2px solid var(--border-light);
    border-radius: var(--radius-lg);
    transition: all var(--transition-normal);
    outline: none;
    resize: vertical;
    min-height: 100px;
    font-family: inherit;
  }

  .form-textarea:focus {
    border-color: var(--accent-color);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    background-color: #fafbff;
  }

  .form-textarea:hover {
    border-color: var(--border-medium);
  }

  /* Terms and Conditions */
  .terms-container {
    padding: var(--spacing-lg);
    background: var(--bg-gray-50);
    border-radius: var(--radius-lg);
    border: 1px solid var(--border-light);
  }

  .checkbox-container {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-md);
  }

  .form-checkbox {
    display: none;
  }

  .checkbox-label {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-sm);
    cursor: pointer;
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .checkbox-custom {
    width: 20px;
    height: 20px;
    border: 2px solid var(--border-medium);
    border-radius: var(--radius-sm);
    background: var(--bg-white);
    position: relative;
    transition: all var(--transition-normal);
    flex-shrink: 0;
    margin-top: 2px;
  }

  .checkbox-custom::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0);
    width: 6px;
    height: 10px;
    border: solid white;
    border-width: 0 2px 2px 0;
    rotate: 45deg;
    transition: transform var(--transition-normal);
  }

  .form-checkbox:checked + .checkbox-label .checkbox-custom {
    background: var(--accent-color);
    border-color: var(--accent-color);
  }

  .form-checkbox:checked + .checkbox-label .checkbox-custom::after {
    transform: translate(-50%, -50%) scale(1) rotate(45deg);
  }

  .checkbox-text {
    font-weight: 500;
    color: var(--text-primary);
  }

  .terms-info {
    font-size: 0.8rem;
    color: var(--text-muted);
    margin: 0;
    line-height: 1.5;
  }

  .terms-link {
    color: var(--accent-color);
    text-decoration: none;
    font-weight: 500;
    transition: color var(--transition-normal);
  }

  .terms-link:hover {
    color: var(--accent-hover);
    text-decoration: underline;
  }

  /* Form Actions */
  .form-actions {
    display: flex;
    justify-content: flex-end;
    gap: var(--spacing-md);
    margin-top: var(--spacing-2xl);
    padding-top: var(--spacing-lg);
    border-top: 1px solid var(--border-light);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-sm);
    padding: 0.875rem var(--spacing-xl);
    border-radius: var(--radius-xl);
    font-weight: 600;
    font-size: 0.9rem;
    transition: all var(--transition-normal);
    cursor: pointer;
    border: 2px solid transparent;
    text-decoration: none;
    position: relative;
    overflow: hidden;
  }

  .btn-secondary {
    background: var(--bg-gray-100);
    color: var(--text-secondary);
    border-color: var(--border-light);
  }

  .btn-secondary:hover {
    background: var(--bg-gray-50);
    color: var(--text-primary);
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--accent-color), var(--success-color));
    color: white;
    box-shadow: var(--shadow-md);
    position: relative;
  }

  .btn-primary::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, var(--accent-hover), var(--success-color));
    opacity: 0;
    transition: opacity var(--transition-normal);
  }

  .btn-primary:hover::before {
    opacity: 1;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-xl);
  }

  .btn span {
    position: relative;
    z-index: 1;
  }

  .btn i {
    transition: transform var(--transition-normal);
    position: relative;
    z-index: 1;
  }

  .btn-primary:hover i {
    transform: translateX(2px);
  }

  .btn-secondary:hover i {
    transform: translateX(-2px);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .inscription-container {
      padding: var(--spacing-md);
      margin-top: 200px;
    }

    .inscription-hero {
      padding: var(--spacing-lg);
      text-align: center;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-decoration {
      display: none;
    }

    .progress-section {
      flex-direction: column;
      gap: var(--spacing-md);
      align-items: stretch;
    }

    .back-button {
      align-self: flex-start;
    }

    .section-header {
      flex-direction: column;
      text-align: center;
    }

    .form-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }

    .form-actions {
      flex-direction: column;
    }

    .btn {
      width: 100%;
      justify-content: center;
    }

    .progress-steps {
      display: none;
    }
  }

  @media (max-width: 480px) {
    .inscription-container {
      padding: var(--spacing-sm);
    }

    .inscription-hero {
      padding: var(--spacing-md);
    }

    .hero-title {
      font-size: 1.75rem;
    }

    .hero-description {
      font-size: 1rem;
    }

    .inscription-form {
      padding: var(--spacing-lg);
    }

    .section-icon {
      width: 40px;
      height: 40px;
      font-size: 1rem;
    }

    .section-title h2 {
      font-size: 1.25rem;
    }

    .form-input, .form-select, .form-textarea {
      padding: 0.75rem var(--spacing-sm);
      font-size: 0.9rem;
    }
  }

  /* Animaciones */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }

  /* Aplicar animaciones */
  .inscription-hero {
    animation: fadeInUp 0.6s ease-out;
  }

  .progress-section {
    animation: slideInRight 0.6s ease-out 0.2s both;
  }

  .form-section {
    animation: fadeInUp 0.6s ease-out calc(0.1s * var(--section-index, 1)) both;
  }

  .form-section:nth-child(1) { --section-index: 1; }
  .form-section:nth-child(2) { --section-index: 2; }
  .form-section:nth-child(3) { --section-index: 3; }
  .form-section:nth-child(4) { --section-index: 4; }
  .form-section:nth-child(5) { --section-index: 5; }

  /* Efectos hover mejorados */
  .form-input:focus,
  .form-select:focus,
  .form-textarea:focus {
    transform: translateY(-1px);
  }

  .section-icon:hover {
    animation: pulse 1s ease-in-out infinite;
  }

  /* Estilos para el loader de DNI */
  .dni-loading-indicator {
    font-family: var(--font-inter);
  }

  /* Mejoras visuales adicionales */
  .form-input::placeholder,
  .form-textarea::placeholder {
    color: var(--text-light);
    font-style: italic;
  }

  .form-input:focus::placeholder,
  .form-textarea:focus::placeholder {
    opacity: 0.7;
    transform: translateY(-2px);
    transition: all var(--transition-normal);
  }

  /* Estados de validación */
  .form-input:valid:not(:placeholder-shown) {
    border-color: var(--success-color);
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%2310b981' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z'/%3e%3c/svg%3e");
    background-repeat: no-repeat;
    background-position: right 0.75rem center;
    background-size: 16px;
    padding-right: 2.5rem;
  }

  .form-input:invalid:not(:placeholder-shown):not(:focus) {
    border-color: var(--error-color);
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%23ef4444' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z'/%3e%3c/svg%3e");
    background-repeat: no-repeat;
    background-position: right 0.75rem center;
    background-size: 16px;
    padding-right: 2.5rem;
  }

  /* Mejorar accesibilidad */
  .form-input:focus,
  .form-select:focus,
  .form-textarea:focus,
  .btn:focus {
    outline: 2px solid var(--accent-color);
    outline-offset: 2px;
  }

