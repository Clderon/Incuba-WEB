<style>
/* Variables */
:root {
  --azul: #000099;
  --azul-hover: #0000cc;
  --azul-claro: #3333ff;
  --verde: #00CC66;
  --verde-claro: #33ff99;
  --blanco: #FFFFFF;
  --gris-claro: #f8f9fa;
  --gris-medio: #e9ecef;
  --fondo: #F9FBFF;
  --sombra: 0 10px 30px rgba(0, 0, 153, 0.08);
  --sombra-hover: 0 15px 35px rgba(0, 0, 153, 0.15);
  --transicion: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  --borde-radius: 16px;
  --borde-radius-sm: 8px;
  --tipo-color: #2196F3;
  --tipo-color-claro: rgba(33, 150, 243, 0.1);
  --tipo-color-rgb: 33, 150, 243;
}

/* Reset básico */
body, html {
  margin: 0;
  padding: 0;
  width: 100%;
  min-height: 100vh;
  overflow-x: hidden !important;
  overflow-y: auto !important;
  background-color: var(--fondo);
  position: relative;
  font-family: 'Poppins', sans-serif;
}

/* Elementos decorativos de fondo */
.background-decoration {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  overflow: hidden;
  pointer-events: none;
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  opacity: 0.2;
  filter: blur(60px);
}

.bg-circle-1 {
  width: 300px;
  height: 300px;
  background: linear-gradient(135deg, var(--tipo-color), #1a1a1a);
  top: -100px;
  right: 5%;
}

.bg-circle-2 {
  width: 500px;
  height: 500px;
  background: linear-gradient(135deg, var(--tipo-color), var(--azul));
