<!-- Decoración de fondo -->
<div class="background-decoration">
  <div class="bg-circle bg-circle-1"></div>
  <div class="bg-circle bg-circle-2"></div>
  <div class="bg-circle bg-circle-3"></div>
  <div class="bg-dots"></div>
  <div class="bg-line bg-line-1"></div>
  <div class="bg-line bg-line-2"></div>
</div>

<div class="confirmacion-container">
  <!-- Cabecera -->
  <div class="confirmacion-header">
    <div class="tipo-icono">
      <% if @tipo == 'preincubacion' %>
        <i class="fas fa-lightbulb"></i>
      <% elsif @tipo == 'incubacion' %>
        <i class="fas fa-rocket"></i>
      <% elsif @tipo == 'innovacion' %>
        <i class="fas fa-cogs"></i>
      <% else %>
        <i class="fas fa-check-circle"></i>
      <% end %>
    </div>
    <div class="confirmacion-info">
      <div class="confirmacion-badge">INSCRIPCIÓN COMPLETADA</div>
      <h1>¡Gracias por tu inscripción!</h1>
      <p>Hemos recibido tu solicitud correctamente.</p>
    </div>
  </div>
  
  <!-- Progreso y navegación -->
  <div class="confirmacion-nav">
    <div class="nav-progress">
      <div class="progress-bar">
        <div class="progress-fill" style="width: 100%;"></div>
      </div>
      <div class="progress-steps">
        <div class="step completed">
          <div class="step-icon">
            <i class="fas fa-user"></i>
          </div>
          <div class="step-label">Información básica</div>
        </div>
        <div class="step active">
          <div class="step-icon">
            <i class="fas fa-check"></i>
          </div>
          <div class="step-label">Confirmación</div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Tarjeta de confirmación -->
  <div class="confirmacion-card">
    <div class="card-header">
      <h2>
        <% if @tipo == 'preincubacion' %>
          <i class="fas fa-lightbulb"></i> Inscripción para Preincubación
        <% elsif @tipo == 'incubacion' %>
          <i class="fas fa-rocket"></i> Inscripción para Incubación
        <% elsif @tipo == 'innovacion' %>
          <i class="fas fa-cogs"></i> Inscripción para Innovación
        <% else %>
          <i class="fas fa-check-circle"></i> Inscripción completada
        <% end %>
      </h2>
      <p>Tu inscripción ha sido recibida y será revisada por nuestro equipo.</p>
    </div>
    
    <div class="card-body">
      <div class="confirmation-message">
        <div class="confirmation-icon">
          <i class="fas fa-check-circle"></i>
        </div>
        <h3>¡Inscripción Exitosa!</h3>
        <p>Hemos recibido tu solicitud para el programa de 
          <% if @tipo == 'preincubacion' %>
            <strong>Preincubación</strong>
          <% elsif @tipo == 'incubacion' %>
            <strong>Incubación</strong>
          <% elsif @tipo == 'innovacion' %>
            <strong>Innovación</strong>
          <% else %>
            <strong>Emprendimiento</strong>
          <% end %>
        </p>
        <p>Te contactaremos pronto con los siguientes pasos a seguir.</p>
      </div>
      
      <div class="next-steps">
        <h4><i class="fas fa-list-ol"></i> Próximos Pasos</h4>
        <ol>
          <li>Recibirás un correo electrónico de confirmación con los detalles de tu inscripción.</li>
          <li>Nuestro equipo revisará tu solicitud en los próximos días.</li>
          <li>Te informaremos sobre el estado de tu solicitud y los siguientes pasos a seguir.</li>
          <li>Prepárate para comenzar tu viaje emprendedor con nosotros.</li>
        </ol>
      </div>
      
      <div class="contact-info">
        <h4><i class="fas fa-address-card"></i> Información de Contacto</h4>
        <p>Si tienes alguna pregunta, no dudes en contactarnos:</p>
        <ul>
          <li><i class="fas fa-envelope"></i> Email: <a href="mailto:contacto@incubaunas.edu.pe">contacto@incubaunas.edu.pe</a></li>
          <li><i class="fas fa-phone"></i> Teléfono: (51) 999-999-999</li>
          <li><i class="fas fa-map-marker-alt"></i> Dirección: Av. Universitaria, Tingo María, Perú</li>
        </ul>
      </div>
      
      <!-- Botones de acción -->
      <div class="form-actions">
        <a href="<%= @tipo.present? ? programas_tipo_path(@tipo) : servicios_path %>" class="btn-secundario">
          <i class="fas fa-arrow-left"></i> Volver a programas
        </a>
        <a href="<%= root_path %>" class="btn-primario">
          <i class="fas fa-home"></i> Ir al inicio
        </a>
      </div>
    </div>
  </div>
</div>

<style>
/* Variables */
:root {
  --azul: #000099;
  --azul-hover: #0000cc;
  --azul-claro: #3333ff;
  --verde: #00CC66;
  --verde-claro: #33ff99;
  --blanco: #FFFFFF;
  --gris-claro: #f8f9fa;
  --gris-medio: #e9ecef;
  --fondo: #F9FBFF;
  --sombra: 0 10px 30px rgba(0, 0, 153, 0.08);
  --sombra-hover: 0 15px 35px rgba(0, 0, 153, 0.15);
  --transicion: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  --borde-radius: 16px;
  --borde-radius-sm: 8px;
  --preincubacion-color: #2196F3;
  --incubacion-color: #009688;
  --innovacion-color: #CDDC39;
  --success-color: #4CAF50;
}

/* Reset básico */
body, html {
  margin: 0;
  padding: 0;
  width: 100%;
  min-height: 100vh;
  overflow-x: hidden !important;
  overflow-y: auto !important;
  background-color: var(--fondo);
  position: relative;
  font-family: 'Poppins', sans-serif;
}

/* Elementos decorativos de fondo */
.background-decoration {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  overflow: hidden;
  pointer-events: none;
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  opacity: 0.2;
  filter: blur(60px);
}

.bg-circle-1 {
  width: 300px;
  height: 300px;
  background: linear-gradient(135deg, var(--success-color), #1a1a1a);
  top: -100px;
  right: 5%;
}

.bg-circle-2 {
  width: 500px;
  height: 500px;
  background: linear-gradient(135deg, var(--success-color), var(--azul));
  bottom: -200px;
  left: -200px;
  opacity: 0.1;
}

.bg-circle-3 {
  width: 200px;
  height: 200px;
  background: var(--success-color);
  top: 30%;
  left: 10%;
  opacity: 0.1;
}

.bg-dots {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: radial-gradient(rgba(0, 0, 153, 0.1) 1px, transparent 1px);
  background-size: 30px 30px;
}

.bg-line {
  position: absolute;
  background: linear-gradient(90deg, rgba(0, 0, 153, 0) 0%, rgba(0, 0, 153, 0.1) 50%, rgba(0, 0, 153, 0) 100%);
  height: 1px;
  width: 100%;
}

.bg-line-1 {
  top: 25%;
  transform: rotate(-5deg);
}

.bg-line-2 {
  bottom: 30%;
  transform: rotate(3deg);
}

/* Estilos para la página de confirmación */
.confirmacion-container {
  max-width: 1000px;
  margin: 40px auto 60px;
  padding: 0 20px;
  position: relative;
  z-index: 1;
}

.confirmacion-header {
  display: flex;
  align-items: center;
  padding: 30px;
  border-radius: var(--borde-radius);
  margin-bottom: 30px;
  color: white;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  position: relative;
  overflow: hidden;
  background: linear-gradient(135deg, var(--success-color), #2e8b57);
  animation: fadeIn 0.8s ease-in-out;
}

.confirmacion-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%23ffffff' fill-opacity='0.1' fill-rule='evenodd'/%3E%3C/svg%3E");
  opacity: 0.5;
}

.tipo-icono {
  width: 80px;
  height: 80px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 25px;
  position: relative;
  z-index: 1;
  border: 2px solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  flex-shrink: 0;
  animation: pulse 2s infinite;
}

.tipo-icono i {
  font-size: 2.5rem;
  color: white;
}

.confirmacion-info {
  flex: 1;
  z-index: 1;
}

.confirmacion-badge {
  display: inline-block;
  background: rgba(255, 255, 255, 0.2);
  padding: 5px 12px;
  border-radius: 20px;
  font-size: 0.75rem;
  font-weight: 600;
  margin-bottom: 10px;
  letter-spacing: 1px;
  animation: fadeInRight 0.8s ease-in-out;
}

.confirmacion-info h1 {
  font-size: 2.2rem;
  margin: 0 0 10px;
  font-weight: 700;
  animation: fadeInLeft 0.8s ease-in-out;
}

.confirmacion-info p {
  font-size: 1rem;
  margin: 0;
  max-width: 700px;
  opacity: 0.9;
  line-height: 1.5;
  animation: fadeInLeft 1s ease-in-out;
}

/* Barra de navegación y progreso */
.confirmacion-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30px;
}

.nav-progress {
  flex: 1;
  max-width: 600px;
}

.progress-bar {
  height: 6px;
  background-color: var(--gris-medio);
  border-radius: 3px;
  margin-bottom: 15px;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  border-radius: 3px;
  transition: width 0.3s ease;
  background-color: var(--success-color);
  animation: progressFill 1.2s ease-in-out;
}

.progress-steps {
  display: flex;
  justify-content: space-between;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  max-width: 120px;
  text-align: center;
}

.step-icon {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-color: var(--gris-medio);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8px;
  color: white;
  transition: background-color 0.3s ease;
}

.step.active .step-icon {
  background-color: var(--success-color);
}

.step.completed .step-icon {
  background-color: var(--success-color);
  position: relative;
}

.step.completed .step-icon::after {
  content: '✓';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 1.2rem;
  color: white;
}

.step-label {
  font-size: 0.85rem;
  color: #666;
  font-weight: 500;
}

.step.active .step-label, .step.completed .step-label {
  color: #333;
  font-weight: 600;
}

/* Tarjeta de confirmación */
.confirmacion-card {
  background: white;
  border-radius: var(--borde-radius);
  overflow: hidden;
  box-shadow: var(--sombra);
  animation: fadeInUp 0.8s forwards;
}

.card-header {
  padding: 25px 30px;
  border-bottom: 1px solid var(--gris-claro);
  background-color: #fcfcfc;
}

.card-header h2 {
  font-size: 1.5rem;
  color: #333;
  margin: 0 0 10px;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 10px;
}

.card-header h2 i {
  color: var(--success-color);
}

.card-header p {
  font-size: 0.95rem;
  color: #666;
  margin: 0;
  line-height: 1.5;
}

.card-body {
  padding: 30px;
}

/* Mensaje de confirmación */
.confirmation-message {
  text-align: center;
  margin-bottom: 40px;
  padding: 30px;
  background-color: rgba(76, 175, 80, 0.05);
  border-radius: var(--borde-radius);
  border: 1px dashed rgba(76, 175, 80, 0.3);
}

.confirmation-icon {
  width: 100px;
  height: 100px;
  background: rgba(76, 175, 80, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20px;
  animation: pulse 2s infinite;
}

.confirmation-icon i {
  font-size: 3rem;
  color: var(--success-color);
}

.confirmation-message h3 {
  font-size: 1.8rem;
  color: #333;
  margin: 0 0 15px;
}

.confirmation-message p {
  font-size: 1.1rem;
  color: #666;
  margin: 0 0 10px;
  line-height: 1.6;
}

.confirmation-message strong {
  color: #333;
}

/* Próximos pasos */
.next-steps {
  margin-bottom: 30px;
  animation: fadeInLeft 1s ease-in-out;
}

.next-steps h4, .contact-info h4 {
  font-size: 1.2rem;
  color: #333;
  margin: 0 0 15px;
  display: flex;
  align-items: center;
  gap: 10px;
}

.next-steps h4 i, .contact-info h4 i {
  color: var(--success-color);
}

.next-steps ol {
  padding-left: 25px;
  margin: 0;
}

.next-steps li {
  margin-bottom: 10px;
  padding-left: 5px;
  line-height: 1.5;
  color: #555;
}

/* Información de contacto */
.contact-info {
  margin-bottom: 30px;
  animation: fadeInRight 1s ease-in-out;
}

.contact-info p {
  margin: 0 0 15px;
  color: #555;
}

.contact-info ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.contact-info li {
  margin-bottom: 10px;
  display: flex;
  align-items: center;
  gap: 10px;
}

.contact-info li i {
  color: var(--success-color);
  width: 20px;
  text-align: center;
