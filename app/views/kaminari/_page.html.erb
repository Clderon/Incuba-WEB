<%# app/views/kaminari/_page.html.erb %>
<% if page.current? %>
  <span class="page current">
    <span class="px-3 py-1 bg-blue-600 border border-blue-600 text-white rounded">
      <%= page %>
    </span>
  </span>
<% else %>
  <span class="page">
    <%= link_to page, url,
      remote: remote,
      class: "px-3 py-1 bg-white border border-gray-300 text-gray-700 rounded hover:bg-gray-100" %>
  </span>
<% end %>